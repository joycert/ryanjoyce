<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ title }}</title>
    <link href="/assets/css/main.css" rel="stylesheet">
</head>
<body class="min-h-screen bg-gray-50 flex flex-col">
    <header class="w-full text-center mb-8 pt-8">
        <a href="/" class="text-4xl font-bold text-gray-800 no-underline hover:underline">
            Ryan Joyce
        </a>
    </header>
    
    <main class="flex-grow">
        <div class="container mx-auto px-6 max-w-4xl">
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for item in collections[collection_name] | reverse %}
                    <div>
                        <a href="{{ item.url }}" class="block overflow-hidden rounded-lg shadow-md transition-all duration-200 hover:shadow-xl hover:-translate-y-1">
                            {% if item.data.image %}
                                <div class="aspect-square overflow-hidden">
                                    <img src="/assets/images/{{ item.data.image }}" alt="{{ item.data.title }}" class="w-full h-full object-cover" />
                                </div>
                            {% endif %}
                        </a>
                        <h3 class="text-sm text-gray-600 mt-2 px-2">{{ item.data.title }}</h3>
                    </div>
                {% endfor %}
            </div>
        </div>
    </main>
</body>
</html>
